<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_constraint_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/menu_gradient_background</item>
    </style>

    <style name="menu_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:text">@string/menu_title</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="menu_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="menu_button_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:background">@drawable/menu_button_border</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="menu_bt_buttons_events" parent="menu_button_parent">
        <item name="android:text">@string/option_buttons_events</item>
    </style>

    <style name="menu_ll_app_information">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="menu_tv_version">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/version_information</item>
    </style>

    <style name="menu_tv_developer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/developer_information</item>
    </style>

</resources>